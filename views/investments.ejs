<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title><%= pageTitle %></title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
        <!-- <link rel="stylesheet" href="/css/coins.css"> -->
    </head> 

        <body>
        <div class="col-lg-12">
            <main>
                <div class= "d-flex mr-2 mt-4 flex-row justify-content-end">
                    <a href="/new-investment"> Add an Investment</a>
                </div>
                <h3>Your Crypto Assets ðŸª™</h3>
                <div class="cards-border">
                <table class = "table">
                <thead> 
                    <tr>
                    <th scope="col" >Cryptocurrency</th>
                    <th scope="col">Closing Price</th>
                    <th scope="col">Total Invested($)</th>
                    <th scope="col">Coin Holdings</th>
                    <th scope="col">Average Price Bought at</th>
                    <th scope="col">Profit/Loss(%)</th>
                    <th scope="col">Gains($)</th>
                    <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <%for (const [key, value] of Object.entries(userInvestments)) { %>
                    <tr class="cards-border-invest">
                      <th scope ="row"><%= key %> <%=value.symbol %></th>
                      <% totalQuantityOwned = value.quantity.reduce((a,b) => a+b)  %>
                      <% averagePriceBoughtAt = value.totalInvested / totalQuantityOwned %>
                      <td class="closing-price"><%= value.closingPrice %></td>
                      <td><%= value.totalInvested %></td>
                      <td><%= totalQuantityOwned %></td>
                      <td class="bought-price"><%= averagePriceBoughtAt%></td>
                      <% profitPercentage = ((value.closingPrice / averagePriceBoughtAt)) %>
                      <% dollarGains = (totalQuantityOwned * (value.closingPrice - averagePriceBoughtAt)) %>
                      <td><%=  profitPercentage > 1 ? `+${Math.abs(profitPercentage) * 100}` : `-${Math.abs(profitPercentage)}` %></td>
                      <td><%=  profitPercentage > 1 ? `ðŸš€  ${Math.abs(dollarGains)}`  : `ðŸ˜­  ${Math.abs(dollarGains)}` %></td>
                    </tr>
                   <% }; %>
                 </tbody>
                </table>
                </div>
                
            </main>
            <% investments.forEach(investment => { %>

                <p><%= investment.coin.name %> </p>
                <p><%= investment.coinPrice %> </p> 
                <p><%= investment.quantity %> </p>
                <a href="/edit-investment/<%= investment.id %> "> Edit</a>
                <form action="/delete-investment" method="POST">
                    <input type="hidden" value="<%= investment.id %>" name="investmentId">
                    <button class="btn" type="submit">Delete</button>
                </form>
            <% }); %> 
            <p></p>
        </div>
        </body>


</html>